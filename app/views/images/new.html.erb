
<h1>New Image</h1>

<%= form_for @image, html: { multipart: true } do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <br>
      <%= f.label :attachment %>
      <%= f.file_field :attachment %>
      <br>
      <%= f.label :description %>
      <%= f.select :description, ['sports', 'travel'] %>
      <br>
      <%= f.hidden_field :user_id, :value => current_user.id %>
      <%= f.submit "Save", class: "btn btn-primary" %>
<% end %>